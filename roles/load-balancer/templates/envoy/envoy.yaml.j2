apiVersion: v1
kind: Pod
metadata:
  name: lb-envoy
  namespace: kube-system
  labels:
    addonmanager.kubernetes.io/mode: Reconcile
    k8s-app: lb-envoy
  annotations:
    checksum/config: {{ LB_CONFIGURATION_CHECKSUM }}
spec:
  hostNetwork: true
  priorityClassName: system-cluster-critical
  containers:
  - name: lb-envoy
    # image: envoyproxy/envoy-alpine:v1.10.0
    image: {{ lb_envoy_image }}
    imagePullPolicy: IfNotPresent
{% if lb_kube_apiserver_healthcheck_port is defined %}
    # 检测当前节点envoy是否存活，若不存活则重启
    livenessProbe:
      httpGet:
        path: /healthz
        port: {{ lb_kube_apiserver_healthcheck_port }}
    readinessProbe:
      httpGet:
        path: /healthz
        port: {{ lb_kube_apiserver_healthcheck_port }}
{% endif %}
    resources: {}
    volumeMounts:
    - mountPath: /etc/envoy
      name: envoy-lb-conf
      readOnly: true
  volumes:
  - name: envoy-lb-conf
    hostPath:
      path: /etc/kubernetes/plugins/lb-config
      type: DirectoryOrCreate